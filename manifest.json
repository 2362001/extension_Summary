{
  "manifest_version": 3,
  "name": "Highlight Summarizer",
  "version": "1.0",
  "description": "Bôi đen text để tóm tắt local",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://router.huggingface.co/*",
    "http://localhost:5050/*",
    "https://api-summarry.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
